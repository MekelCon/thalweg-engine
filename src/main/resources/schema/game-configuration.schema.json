{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.thalweg.fr/game-configuration.schema.json",
  "title": "Game Configuration",
  "description": "Basic game configuration",
  "type": "object",
  "properties": {
    "debug": {
      "type": "boolean",
      "default": false
    },
    "gdx": {
      "$ref": "gdx-configuration.schema.json"
    },
    "lwjgl3ApplicationConfiguration": {
      "$ref": "lwjgl3-application-configuration.schema.json"
    },
    "startScreen": {
      "type": "string",
      "pattern": "^screen/.*(\\.json|\\.yaml)$"
    },
    "virtualScreen": {
      "type": "object",
      "properties": {
        "height": {
          "type": "integer",
          "minimum": 0
        },
        "width": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": [
        "height",
        "width"
      ]
    }
  },
  "required": [
    "gdx",
    "startScreen",
    "virtualScreen"
  ],
  "additionalProperties": false
}
