{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.thalweg.fr/thalweg-actor.schema",
  "title": "Thalweg game screen",
  "description": "Thalweg game screen",
  "type": "object",
  "properties": {
    "position": {
      "type": "object",
      "description": "The position in the virtual screen coordinate system",
      "properties": {
        "x": {
          "type": "number",
          "default": 0
        },
        "y": {
          "type": "number",
          "default": 0
        },
        "z": {
          "type": "number",
          "default": 0
        }
      },
      "additionalProperties": false
    },
    "scale": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number",
          "default": 1,
          "minimum": 0
        },
        "y": {
          "type": "number",
          "default": 1,
          "minimum": 0
        }
      },
      "default": {
        "x": 1,
        "y": 1
      },
      "additionalProperties": false
    },
    "texture": {
      "type": "string",
      "pattern": "^sprite/.*\\..*$"
    },
    "triggers" :  {
      "type": "array",
      "items": {
        "$ref": "thalweg-trigger.schema.json"
      }
    }
  },
  "additionalProperties": false
}
